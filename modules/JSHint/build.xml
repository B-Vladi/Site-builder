<project default="build">
	<property file="build.properties" />
	<taskdef name="jshint"
					 classname="com.philmander.ant.jshint.JsHintAntTask"
					 classpath="${jshint.path.task}" />

	<target name="build">
		<property file="${CONFIG.PATH}" />
		<jshint dir="${basedir}"
						reportFile="${basedir}/${reportfile}"
						fail="false"
						optionsfile="${CONFIG.PATH}"
						includes="${includes}"
						excludes="${excludes}" />
	</target>
</project>