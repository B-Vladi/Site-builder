<project default="build">
	<property file="build.properties" />
	<taskdef name="jshint"
					 classname="com.philmander.ant.jshint.JsHintAntTask"
					 classpath="${jshint.path.task}" />

	<target name="build">
		<property file="${CONFIG.PATH}" />
		<jshint dir="${basedir}"
						fail="false"
						includes="${includes}"
						excludes="${excludes}"
						reportFile="${basedir}/${reportfile}" />
	</target>
</project>